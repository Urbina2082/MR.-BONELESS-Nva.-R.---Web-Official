---
import { Image } from "astro:assets";

import Logo from "../assets/logo.webp";
---

<div id="container">
  <div class="menu">
    <div class="fun">
      <Image class="logo" src={Logo} alt="Logo" />
      <span>MR. BONELESS</span>
    </div>
    <nav>
      <ul>
        <li><a href="#"> Inicio</a></li>
        <li><a href="#Sucursales">Sucursales</a></li>
        <li><a href="#Menu">Menú</a></li>
        <li><a href="#Galleria">Galería</a></li>
        <li><a href="#Contacto">Contacto </a></li>
        <li><a href="#Promociones">Promociones</a></li>
      </ul>
    </nav>
    <a href="#Menu" class="but">Ver Menu</a>
  </div>
</div>

<style>
  .logo {
    width: 60px;
    height: auto;
  }

  .menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 60px;
    background-color: #000000;
    color: #fff;
    position: relative;
    position: sticky;
    top: 0;
  }

  span {
    font-size: 18px;
    margin: 0;
  }

  .fun {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  nav ul {
    list-style: none;
    display: flex;
    gap: 30px;
  }

  nav ul li a {
    color: #ffffffbd;
    text-decoration: none;
    font-size: 15px;

  }
  nav ul li a:hover {
    color: #ff6600;
    transition: all 0.3s ease;
    transform: scale(1.1);
  }

  .but {
    background-color: #ff6600;
    text-decoration: none;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    font-size: 15px;
    border-radius: 1.4rem;
  }

  @media (max-width: 768px) {
    .menu {
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    nav ul {
     display: none;
    }

    .but {
      margin-top: 20px;
      display: none;
    }
  }

</style>
