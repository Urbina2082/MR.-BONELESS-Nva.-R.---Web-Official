  background: linear-gradient(180deg, #0d0d0d, #060606);
  border: 1px solid #1e1e1e;
  color: #ddd;
  text-align: left;
  font-size: .95rem;
  cursor: pointer;
  transition: all .25s ease;
}

.option:hover {
  transform: translateY(-2px);
  border-color: #333;
}

.option.active {
  background: linear-gradient(135deg, #ff7a00, #ff9a3c);
  color: #000;
  font-weight: 700;
  box-shadow: 0 12px 35px rgba(255,122,0,.45);
}

/* ===== SUMMARY ===== */
.summary {
  max-width: 920px;
  margin: auto;
  padding: 2.2rem;
  border-radius: 22px;
  background: linear-gradient(135deg, #3a1800, #1a0900);
  box-shadow: inset 0 0 0 1px rgba(255,122,0,.15);
}

.summary h3 {
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 1.8rem;
}

/* ===== SUMMARY GRID ===== */
.summary-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px,1fr));
  gap: 1rem;
}

.card {
  background: linear-gradient(
    180deg,
    rgba(0,0,0,.45),
    rgba(0,0,0,.25)
  );
  border-radius: 14px;
  padding: 1rem 1.2rem;
  box-shadow: inset 0 0 0 1px rgba(255,255,255,.05);
}

.card span {
  font-size: .7rem;
  color: #ff9a3c;
  letter-spacing: .05em;
}

.card strong {
  display: block;
  margin-top: .2rem;
  font-size: .95rem;
}

/* ===== ACTIONS ===== */
.actions {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.wa {
  background: linear-gradient(135deg, #25d366, #1fb154);
  color: #000;
  padding: .85rem 1.7rem;
  border-radius: 999px;
  font-weight: 800;
  text-decoration: none;
  box-shadow: 0 10px 30px rgba(37,211,102,.35);
}

.reset {
  background: transparent;
  border: 1px solid #555;
  color: #fff;
  padding: .85rem 1.7rem;
  border-radius: 999px;
  cursor: pointer;
}
</style>