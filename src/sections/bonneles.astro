<script>
document.addEventListener("DOMContentLoaded", () => {

  const stepsData = {
    boneless: ["ClÃ¡sicos", "BBQ", "Buffalo", "Mango Habanero"],
    salsa: ["BBQ Ahumada", "BÃºfalo", "Mango Habanero", "Lemon Pepper"],
    size: ["Chico (10 pzas)", "Mediano (20 pzas)", "Grande (40 pzas)"],
    side: ["Papas con Queso", "Aros de Cebolla", "Sin acompaÃ±amiento"],
    drink: ["Agua Fresca", "Refresco", "Limonada", "Michelada"]
  };

  const state = {
    boneless: null,
    salsa: null,
    size: null,
    side: null,
    drink: null
  };

  let currentStep = "boneless";

  const optionsEl = document.getElementById("options");
  const summaryEl = document.getElementById("summary");

  function renderOptions() {
    optionsEl.innerHTML = stepsData[currentStep]
      .map(opt => `
        <button class="option ${state[currentStep] === opt ? "active" : ""}">
          ${opt}
        </button>
      `).join("");

    optionsEl.querySelectorAll(".option").forEach(btn => {
      btn.addEventListener("click", () => {
        state[currentStep] = btn.textContent;
        renderOptions();
        updateStepsUI();
        checkSummary();
      });
    });
  }

  function updateStepsUI() {
    document.querySelectorAll(".step").forEach(step => {
      step.classList.toggle("active", step.dataset.step === currentStep);
      step.classList.toggle("done", state[step.dataset.step]);
    });
  }

  function checkSummary() {
    const completed = Object.values(state).every(Boolean);

    if (completed) {
      document.getElementById("s-boneless").textContent = state.boneless;
      document.getElementById("s-salsa").textContent = state.salsa;
      document.getElementById("s-size").textContent = state.size;
      document.getElementById("s-side").textContent = state.side;
      document.getElementById("s-drink").textContent = state.drink;

      const msg = `
ðŸ— Mi combo ideal:
Boneless: ${state.boneless}
Salsa: ${state.salsa}
TamaÃ±o: ${state.size}
AcompaÃ±amiento: ${state.side}
Bebida: ${state.drink}
      `.trim();

      document.getElementById("wa").href =
        "https://wa.me/52XXXXXXXXXX?text=" + encodeURIComponent(msg);

      summaryEl.classList.remove("hidden");
    }
  }

  document.querySelectorAll(".step").forEach(btn => {
    btn.addEventListener("click", () => {
      currentStep = btn.dataset.step;
      renderOptions();
      updateStepsUI();
    });
  });

  document.getElementById("reset").addEventListener("click", () => {
    Object.keys(state).forEach(k => state[k] = null);
    summaryEl.classList.add("hidden");
    currentStep = "boneless";
    renderOptions();
    updateStepsUI();
  });

  renderOptions();
});
</script>

<style>
/* ===== BASE ===== */
.combo-ui {
  min-height: 100vh;
  padding: 3rem 1.5rem;
  background: radial-gradient(circle at top, #1b0d05 0%, #000 55%);
  color: #fff;
  font-family: Inter, system-ui, sans-serif;
}

/* ===== STEPS ===== */
.steps {
  display: flex;
  justify-content: center;
  gap: .6rem;
  flex-wrap: wrap;
  margin-bottom: 2.5rem;
}

.step {
  padding: .45rem .95rem;
  border-radius: 999px;
  font-size: .75rem;
  background: #2b1400;
  color: #ff9a3c;
  opacity: .85;
}

.step.active {
  background: linear-gradient(135deg, #ff7a00, #ff9a3c);
  color: #000;
  font-weight: 700;
  box-shadow: 0 0 0 1px #ff7a00;
}

/* ===== TITLE ===== */
.step-title {
  text-align: center;
  font-size: 1.6rem;
  font-weight: 700;
  margin-bottom: 1.8rem;
}

/* ===== OPTIONS ===== */
.options {
  max-width: 920px;
  margin: 0 auto 3rem;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px,1fr));
  gap: 1rem;
}

.option {
