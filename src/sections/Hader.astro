---
import Navbar from "../components/Navbar.astro";

import { Image } from "astro:assets";

import Header from "../assets/Logo.webp";
---

<header>
  <Navbar />

  <img class="logo" src="/Logo.webp" alt="Logo MR. Boneless">
  <h2>Las Mejores <span>Boneless</span> <br /> de la Ciudad</h2>
  <p>
    Sabor inigualable, salsas únicas y la mejor experiencia. Visítanos en <br
    />cualquiera de nuestras sucursales.
  </p>

  <div class="buts" >
    <a href="#Menu">Explorar Menú</a>
    <a id="sucursales" href="#Sucursales">Nuestras Sucursales</a>
  </div>
</header>

<style>
  header {
    width: 100%;
    height: 100vh;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.687), rgba(0, 0, 0, 0.678)),
      url(../assets/fondo.webp);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    text-align: center;
  }

  .logo {
    margin-top: 30px;
    width: 130px;
    height: auto;
  }

  h2 {
    color: #fff;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin: 10px;
    font-weight: 900;
  }

  h2 span {
    color: #ff6600;
  }

  p {
    color: #ffffffac;
    font-size: 20px;
    margin-top: 0px;
    padding: 0rem 1rem;
    font-weight: 400;
  }

  a {
    background-color: #ff6600;
    color: #fff;
    font-size: 19px;
    text-decoration: none;
    padding: 17px 25px;
    margin: 10px;
    display: inline-block;
    transition: all 0.3s ease;
    border-radius: 2.5rem;
  }
  a:hover {
    background-color: #d65703;
    transition: all 0.3s ease;
    transform: scale(1.1);
  }

  #sucursales {
    margin-top: 20px;
    background: #ffffff00;
    border: #fff 1px solid;
  }
</style>
